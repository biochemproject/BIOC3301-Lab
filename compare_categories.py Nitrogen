#!/bin/bash --login
#PBS -l walltime=01:00:00
#PBS -l select=1:ncpus=2
#PBS -N 2017_cr_nojoin_no_golay_serial
#PBS -A d411-training

cd $PBS_O_WORqKDIR

module load miniconda/python2

# setting temporary directory
mkdir -p ~/qiime_tmp
export TMPDIR=~/qiime_tmp

# loading virtualenv
echo "loading virtualenv" 

source activate qiime1


#comparing pH Unweighted UniFrac Anosim 
compare_categories.py --method anosim -i ~/2018_02_smb/core_output/bdiv_even627/weighted_unifrac_dm.txt -m ~/2018_02_smb/mapcomplete.tsv -c SampleNitrogen -o ~/2018_02_smb/anosim_N -n 99

source deactivate
